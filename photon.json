{
  "builders": [
    {
      "CPUs": "{{ user `numvcpus` }}",
      "RAM": "{{ user `ramsize` }}",
      "boot_command": [
        "<esc><wait>c",
        "linux /isolinux/vmlinuz root=/dev/ram0 loglevel=3 insecure_installation=1 ks=http://{{ user `builder_http` }}:{{ .HTTPPort }}/photon-kickstart.json photon.media=cdrom",
        "<enter>", "initrd /isolinux/initrd.img",
        "<enter>",
        "boot",
        "<enter>"
      ],
      "boot_order": "disk,cdrom",
      "cdrom_type": "sata",
      "boot_wait": "2s",
      "cluster": "{{ user `builder_vcenter_cluster` }}",
      "datastore": "{{ user `builder_vcenter_datastore` }}",
      "export": {
        "force": true,
        "options": [
          "extraconfig"
        ],
        "output_directory": "./output-vsphere-iso"
      },
      "guest_os_type": "vmwarePhoton64Guest",
      "notes": "Appliance serving Tanzu Community Edition version: {{ user `version` }}",
      "http_directory": "http",
      "insecure_connection": true,
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "network_adapters": [
        {
          "network": "{{ user `builder_vcenter_portgroup` }}",
          "network_card": "vmxnet3"
        }
      ],
      "shutdown_command": "/sbin/shutdown -h now",
      "shutdown_timeout": "1000s",
      "ssh_password": "{{ user `guest_password` }}",
      "ssh_port": 22,
      "ssh_username": "{{ user `guest_username` }}",
      "firmware": "efi",
      "disk_controller_type": "nvme",
      "storage": [
        {
          "disk_size": "20480",
          "disk_thin_provisioned": true
        }
      ],
      "type": "vsphere-iso",
      "username": "{{ user `builder_vcenter_username` }}",
      "password": "{{ user `builder_vcenter_password` }}",
      "vcenter_server": "{{ user `builder_vcenter` }}",
      "vm_name": "{{ user `vm_name` }}",
      "vm_version": "17"
    }
  ],
  "min_packer_version": "1.8.0",
  "post-processors": [
    {
      "environment_vars": [
        "PHOTON_VERSION={{ user `version` }}",
        "PHOTON_APPLIANCE_NAME={{ user `vm_name` }}",
        "FINAL_PHOTON_APPLIANCE_NAME={{ user `vm_name` }}-{{user `version`}}{{user `gitcommit`}}",
        "PHOTON_OVF_TEMPLATE={{ user `photon_ovf_template` }}"
      ],
      "inline": [
        "cd manual",
        "./add_ovf_properties.sh"
      ],
      "type": "shell-local"
    },
    {
      "inline": [
        "pwsh -F unregister_vm.ps1 {{ user `ovftool_deploy_vcenter` }} {{ user `ovftool_deploy_vcenter_username` }} {{ user `ovftool_deploy_vcenter_password` }} {{ user `vm_name` }}"
      ],
      "type": "shell-local"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/photon-settings.sh"
      ],
      "type": "shell"
    },
    {
      "expect_disconnect": true,
      "scripts": [
        "scripts/photon-docker.sh"
      ],
      "type": "shell"
    },
    {
      "pause_before": "20s",
      "scripts": [
        "scripts/photon-cleanup.sh"
      ],
      "type": "shell"
    },
    {
      "destination": "/root/setup/getOvfProperty.py",
      "source": "files/getOvfProperty.py",
      "type": "file"
    },
    {
      "destination": "/etc/rc.d/rc.local",
      "source": "files/rc.local",
      "type": "file"
    },
    {
      "destination": "/root/setup/setup.sh",
      "source": "files/setup.sh",
      "type": "file"
    },
    {
      "destination": "/root/setup/setup-01-os.sh",
      "source": "files/setup-01-os.sh",
      "type": "file"
    },
    {
      "destination": "/root/setup/setup-02-proxy.sh",
      "source": "files/setup-02-proxy.sh",
      "type": "file"
    },
    {
      "destination": "/root/setup/setup-03-network.sh",
      "source": "files/setup-03-network.sh",
      "type": "file"
    },
    {
      "destination": "/root/setup/setup-04-tce-prereqs.sh",
      "source": "files/setup-04-tce-prereqs.sh",
      "type": "file"
    },
    {
      "destination": "/root/setup/setup-05-shell.sh",
      "source": "files/setup-05-shell.sh",
      "type": "file"
    },
    {
      "destination": "/root/setup/setup-09-banner.sh",
      "source": "files/setup-09-banner.sh",
      "type": "file"
    },
    {
      "destination": "/root/.p10k.zsh",
      "source": "files/p10k.zsh",
      "type": "file"
    },
    {
      "destination": "/etc/motd",
      "source": "files/motd",
      "type": "file"
    }
  ],
  "variables": {
    "ovftool_deploy_vcenter": "cube-vcsa-01.lab.why-did-it.fail",
    "ovftool_deploy_vcenter_password": "tceDEMO01!",
    "ovftool_deploy_vcenter_username": "svc_packer@vsphere.local",
    "photon_ovf_template": "photon.xml.template"
  }
}

